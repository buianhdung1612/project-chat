doctype html
html
    head
        title #{pageTitle}
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet")
        link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" rel="stylesheet")
        link(href="https://cdnjs.cloudflare.com/ajax/libs/file-upload-with-preview/6.1.2/style.min.css" rel="stylesheet")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/viewerjs/1.11.6/viewer.min.css")
        link(href="/css/style.css" rel="stylesheet")
    
    body
        - if (messages.success)
            div(
                class="alert alert-success alert-message"
                alert-message
            ) #{messages.success}
            
        - if (messages.error)
            div(
                class="alert alert-danger alert-message"
                alert-message
            ) #{messages.error}
        ul
            if(user)
                li
                    a(href="/user/friends") Bạn bè
                    span(
                        class="badge badge-danger ml-1"
                        badge-user-friends=user.id
                    ) #{user.friendList.length}
                li
                    a(href="/user/rooms") Phòng chat
                li
                    a(href="/user/logout") Đăng xuất
            else
                li
                    a(href="/user/register") Đăng ký
                li
                    a(href="/user/login") Đăng nhập
            
        block main

        script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js")
        script(type="module", src="https://cdn.jsdelivr.net/npm/emoji-picker-element@^1/index.js") 
        script(src="https://cdnjs.cloudflare.com/ajax/libs/file-upload-with-preview/6.1.2/index.iife.min.js") 
        script(src="https://cdnjs.cloudflare.com/ajax/libs/viewerjs/1.11.6/viewer.min.js") 
        script(src="/socket.io/socket.io.js")    
        script(type="module" src="/js/socket.js")  
        script(src="/js/script.js") 